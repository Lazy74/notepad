
@{
    ViewBag.Title = "notepad";
}

<html>
<head>
    <title>@string.Format("Project: {0}", ViewBag.Title)</title>

    <link href="/Content/bootstrap.css" rel="stylesheet"/>
    <link href="/Content/Site.css" rel="stylesheet" />

    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <script src="/Scripts/knockout-3.4.0.js"></script>
    <script src="/Scripts/Site.js"></script>
</head>

<body>
    <div class="notepad">
        <input type="text" class="form-control" placeholder="Название блокнота" data-bind="value: newNotepadName"/>
        <button class="btn btn-success" data-bind="click: createNotepad">Создать</button>
    </div>

    <div class="btn-group" data-bind="foreach: notepads ">
        <button type="button" class="btn btn-success notepad-i" data-bind="text: name, click: $parent.loadNotepad" onclick="selectNotepad(this)"></button>
    </div>

    <div class="image-name-notepad">
        <img data-bind="attr: { src: notepadImageName }" />
    </div>

    <div class="notepad-content">
        <textarea rows="18" data-bind="value: notepadContent" class="form-control"></textarea>

        <div class="btn-group">
            <button class="btn btn-success btn-i" data-bind="click: pageCreateNotepad">Создать</button>
            <button class="btn btn-success btn-i" data-bind="click: saveContent">Сохранить</button>
            <button class="btn btn-success btn-i" data-bind="click: deletNotepad">Удалить</button>
        </div>


        <button class="btn btn-success log" data-bind="click: toLog">Log</button>
    </div>


    <script>
        loadBody();
    </script>

    @Html.Raw(ViewBag.Script)

</body>
</html>

